{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
		"lineWidth": 120
  },
  "linter": {    
    "enabled": true,    
    "rules": {
      "complexity": {
        "noStaticOnlyClass":"off",
        "noThisInStatic": "off"        
      },
      "suspicious": {
        "noExplicitAny": "off"        
      },
      "style": {
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "noParameterAssign":"off"     
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "javascript": {
    "formatter": {
      "quoteStyle":"double",
      "semicolons": "always"
    }
  }
}